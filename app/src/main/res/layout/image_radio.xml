<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="vm" type="com.dingdonginc.zhangfang.imageradio.ImageRadioItemViewModel"/>
        <variable name="onclick" type="android.view.View.OnClickListener"/>
    </data>
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@{vm.src}"
                android:background="@{vm.clicked}"
                android:onClick="@{onclick}"
                android:id="@+id/image_radio_item"
        />
    </FrameLayout>

</layout>
